<% if @property.present? %>
<div id="content">
  <div id="content_container">

    <!--  1/3 x 2/3 -->
    <div class="one_third">
      <a name="listing"></a>
      <div id="listing_container">
        <img src="<%=@property.image_url %>">
          <p>Address: <%=@property.address %></p>
          <p>Neighborhood: <%=@property.neighborhood.name %></p>
          <p>City: <%=@property.city %></p>
          <p>State: <%=@property.state %></p>
          <p>Description: <%=@property.description %></p>
        <a href='/properties/<%= @property.id %>'>Click Here to View/Add Ideas</a>
      </div>
    </div>

    <div class="two_third">
      <div id="idea_container">
        <header>I would like to see:</header>
        <ul>
         <% @property.ideas.each do |idea| %>
          <li><a href='#'<%= idea.id %>><%= idea.idea %></a></li>
            <% end %>
        </ul>
      </div>
    </div>
    <div class="resetColumnSet"></div>





    <div class="one_third">
      <p>Storefront is a place where people can communicate and collaborate
        about the businesses they would like to see in their communities.
    </div>
    <div class="one_third">
      <p>What businesses would you like to see in your community?</p>
    </div>

    <div class="resetColumnSet"></div>


  </div><!--end content_container-->
</div><!--end content-->
<% end %>